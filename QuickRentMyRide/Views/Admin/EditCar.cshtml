@model QuickRentMyRide.Models.Car

@{
    ViewBag.Title = "Edit Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <h2 class="text-center mb-4 text-uppercase fw-bold">Edit Car</h2>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="EditCar" asp-route-id="@Model.CarID" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="CarModel" class="form-label">Car Model</label>
                            <input asp-for="CarModel" class="form-control" placeholder="Enter Car Model" />
                            <span asp-validation-for="CarModel" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumberPlate" class="form-label">Number Plate</label>
                            <input asp-for="NumberPlate" class="form-control" placeholder="Enter Number Plate" />
                            <span asp-validation-for="NumberPlate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RentPerDay" class="form-label">Rent Per Day</label>
                            <input asp-for="RentPerDay" type="number" class="form-control" placeholder="Enter Rent Per Day" />
                            <span asp-validation-for="RentPerDay" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsAvailable" class="form-label">Availability</label>
                            <select asp-for="IsAvailable" class="form-select">
                                <select class="form-select" name="IsAvailable">
                                    @if (Model.IsAvailable)
                                    {
                                        <option value="true" selected>Yes</option>
                                        <option value="false">No</option>
                                    }
                                    else
                                    {
                                        <option value="true">Yes</option>
                                        <option value="false" selected>No</option>
                                    }
                                </select>

                            </select>
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Car Image</label>
                            <input type="file" name="CarImageFile" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.CarImage))
                            {
                                <div class="mt-2 text-center">
                                    <img src="@Model.CarImage" class="img-thumbnail" style="max-width:150px; height:auto;" />
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ManageCars" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-1"></i> Update Car
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
