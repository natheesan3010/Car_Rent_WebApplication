@model IEnumerable<QuickRentMyRide.Models.Customer>

@{
    ViewBag.Title = "Manage Customers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">

    <h2 class="text-center mb-4 text-uppercase fw-bold">Manage Customers</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="AddCustomer" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Add New Customer
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-striped align-middle mb-0 bg-white">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>License</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.CustomerID</td>
                        <td>@c.FirstName @c.LastName</td>
                        <td>@c.Email</td>
                        <td>@c.PhoneNumber</td>
                        <td>@c.Address</td>
                        <td>
                            @if (!string.IsNullOrEmpty(c.LicensePhotoPath))
                            {
                                <img src="@c.LicensePhotoPath" class="img-thumbnail" style="width:80px;" />
                            }
                            else
                            {
                                <span class="badge bg-secondary">No Photo</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex flex-wrap gap-1">
                                <a asp-action="EditCustomer" asp-route-id="@c.CustomerID" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <form asp-action="DeleteCustomer" asp-route-id="@c.CustomerID" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
