@model QuickRentMyRide.Models.Car

@{
    ViewBag.Title = "Add Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">Add Car</h4>
                </div>
                <div class="card-body">
                    @* Validation Summary *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            Please fill in all required fields.
                        </div>
                    }

                    <form asp-action="AddCar" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="NumberPlate" class="form-label">Number Plate</label>
                            <input asp-for="NumberPlate" class="form-control" />
                            <span asp-validation-for="NumberPlate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Car Image</label>
                            <input type="file" name="CarImageFile" class="form-control" />
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsAvailable" class="form-check-input" />
                            <label asp-for="IsAvailable" class="form-check-label">Is Available</label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CarBrand" class="form-label">Brand</label>
                            <input asp-for="CarBrand" class="form-control" />
                            <span asp-validation-for="CarBrand" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CarModel" class="form-label">Model</label>
                            <input asp-for="CarModel" class="form-control" />
                            <span asp-validation-for="CarModel" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RentPerDay" class="form-label">Rent per Day (LKR)</label>
                            <input asp-for="RentPerDay" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="RentPerDay" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                🚗 Add Car
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
