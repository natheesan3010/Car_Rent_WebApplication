@model QuickRentMyRide.Models.Booking
@{
    var car = ViewBag.Car as QuickRentMyRide.Models.Car;
    var publishableKey = ViewBag.PublishableKey as string ?? "";
}

<div class="container py-5">
    @if (car == null)
    {
        <div class="alert alert-danger text-center">Car details not found!</div>
    }
    else
    {
        <div class="card shadow-lg rounded-4 mb-4">
            <div class="row g-0">
                <div class="col-md-5">
                    <img src="@(string.IsNullOrEmpty(car.CarImage) ? "~/images/default-car.webp" : car.CarImage)"
                         class="img-fluid h-100" style="object-fit: cover;"
                         alt="@car.CarBrand @car.CarModel" />
                </div>
                <div class="col-md-7">
                    <div class="card-body p-4">
                        <h2 class="card-title mb-3 fw-bold">@car.CarBrand @car.CarModel</h2>
                        <span class="badge bg-success fs-6 mb-3 shadow-sm">
                            Price per day: LKR @car.RentPerDay
                        </span>
                        <hr />
                        <h5 class="mb-3 fw-semibold">Booking Details</h5>

                        <form id="bookingForm">
                            <input type="hidden" id="CarID" value="@car.CarID" />
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Start Date</label>
                                    <input type="date" id="StartDate" class="form-control form-control-lg"
                                           value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">End Date</label>
                                    <input type="date" id="EndDate" class="form-control form-control-lg"
                                           value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>

                            <button type="button" id="checkout-button" class="btn btn-success btn-lg w-100 shadow-sm book-btn">
                                <i class="bi bi-credit-card me-1"></i> Pay & Book Now
                            </button>
                        </form>

                        <div id="messages" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var stripe = Stripe('@publishableKey');

            document.getElementById("checkout-button").addEventListener("click", function () {
                var carID = document.getElementById("CarID").value;
                var startDate = document.getElementById("StartDate").value;
                var endDate = document.getElementById("EndDate").value;

                // 1️⃣ Create booking first
                fetch('@Url.Action("Create", "Booking")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ CarID: parseInt(carID), StartDate: startDate, EndDate: endDate })
                })
                .then(res => res.json())
                .then(data => {
                    if(data.bookingId) {
                        // 2️⃣ Booking created, now redirect to Stripe checkout
                        fetch('@Url.Action("CreateCheckoutSession", "Booking")?id=' + data.bookingId, {
                            method: 'POST'
                        })
                        .then(res => res.json())
                        .then(session => stripe.redirectToCheckout({ sessionId: session.id }))
                        .catch(err => console.error(err));
                    } else {
                        document.getElementById("messages").innerHTML = '<div class="alert alert-danger">' + (data.error || 'Booking failed') + '</div>';
                    }
                })
                .catch(err => console.error(err));
            });
        });
    </script>

    <style>
        .book-btn {
            transition: transform 0.3s;
        }

            .book-btn:hover {
                transform: scale(1.03);
            }
    </style>
}
