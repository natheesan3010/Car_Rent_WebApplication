@model IEnumerable<QuickRentMyRide.Models.Booking>

<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-uppercase">My Bookings</h2>

    <!-- TempData Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="tempAlert" class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="tempAlert" class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You don't have any bookings yet.
        </div>
    }
    else
    {
        <div class="table-responsive shadow rounded">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Car</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Payment</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.Car.CarModel</td>
                            <td>@b.StartDate.ToString("dd-MMM-yyyy")</td>
                            <td>@b.EndDate.ToString("dd-MMM-yyyy")</td>
                            <td>
                                <span class="badge @(b.Status == "Confirmed" ? "bg-success" :
                                                                                          b.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                            @b.Status
                        </span>
                    </td>
                    <td>
                        <span class="badge @(b.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                            @b.PaymentStatus
                        </span>
                    </td>
                    <td>
                        @if (b.Status == "Confirmed" && b.PaymentStatus != "Paid")
                                {
                                    <a asp-action="Checkout" asp-route-id="@b.BookingID" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-credit-card"></i> Pay Now
                                    </a>
                                }
                                else if (b.Status == "Confirmed" && b.PaymentStatus == "Paid")
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        <i class="bi bi-check-circle"></i> Paid
                                    </button>
                                }
                                else if (b.Status == "Confirmed")
                                {
                                    <form asp-action="Cancel" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@b.BookingID" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-x-circle"></i> Cancel
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        <i class="bi bi-slash-circle"></i> N/A
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Auto Fade Out TempData Alerts -->
<script>
    window.addEventListener('DOMContentLoaded', () => {
        const alertBox = document.querySelectorAll('#tempAlert');
        alertBox.forEach(box => {
            setTimeout(() => {
                box.style.transition = "opacity 1s ease-out";
                box.style.opacity = "0";
                setTimeout(() => box.remove(), 1000);
            }, 4000); // 4 seconds
        });
    });
</script>
