@model List<QuickRentMyRide.Models.Booking>

@{
    ViewBag.Title = "My Bookings";
}

<div class="container py-5">
    <h2 class="mb-4">My Bookings</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <p>You have no bookings yet.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Car</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Payment</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Car.CarBrand @b.Car.CarModel</td>
                        <td>@b.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@b.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>@b.TotalPrice.ToString("C")</td>
                        <td>@b.Status</td>
                        <td>@b.PaymentStatus</td>
                        <td>
                            @if (b.Status == "Pending")
                            {
                                <form asp-action="Cancel" method="post" onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="id" value="@b.BookingID" />
                                    <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
