@model QuickRentMyRide.Models.Booking
@{
    var car = ViewBag.Car as QuickRentMyRide.Models.Car;
    var publishableKey = ViewBag.PublishableKey as string ?? "";
}

<div class="container py-5">
    @if (car == null)
    {
        <div class="alert alert-danger text-center">Car details not found!</div>
    }
    else
    {
        <div class="card shadow-lg rounded-4 mb-4">
            <div class="row g-0">
                <div class="col-md-5">
                    <img src="@(string.IsNullOrEmpty(car.CarImage) ? "~/images/default-car.webp" : car.CarImage)"
                         class="img-fluid h-100 rounded-start" style="object-fit: cover;" alt="@car.CarBrand @car.CarModel" />
                </div>
                <div class="col-md-7">
                    <div class="card-body p-4">
                        <h2>@car.CarBrand @car.CarModel</h2>
                        <p>Price per day: LKR @car.RentPerDay</p>

                        <form id="bookingForm" class="needs-validation" novalidate>
                            <input type="hidden" id="CarID" value="@car.CarID" />
                            <div class="mb-3">
                                <label>Start Date</label>
                                <input type="date" id="StartDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                            </div>
                            <div class="mb-3">
                                <label>End Date</label>
                                <input type="date" id="EndDate" class="form-control" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                            </div>
                            <button type="button" id="checkout-button" class="btn btn-success w-100">Pay & Book Now</button>
                        </form>
                        <div id="messages" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.getElementById("checkout-button").addEventListener("click", function () {
            var form = document.getElementById("bookingForm");
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }

            var carID = document.getElementById("CarID").value;
            var startDate = document.getElementById("StartDate").value;
            var endDate = document.getElementById("EndDate").value;

            fetch('@Url.Action("Create", "Booking")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ CarID: parseInt(carID), StartDate: startDate, EndDate: endDate })
            })
            .then(res => res.json())
            .then(data => {
                if (data.bookingId) {
                    var stripe = Stripe('@publishableKey');
                    fetch('@Url.Action("CreateCheckoutSession", "Booking")?id=' + data.bookingId, { method: 'POST' })
                    .then(res => res.json())
                    .then(session => stripe.redirectToCheckout({ sessionId: session.id }))
                    .catch(err => console.error(err));
                } else {
                    document.getElementById("messages").innerHTML =
                        '<div class="alert alert-danger">' + (data.error || 'Booking failed') + '</div>';
                }
            })
            .catch(err => console.error(err));
        });
    </script>
}
