@model QuickRentMyRide.Models.Booking

@{
    var car = ViewBag.Car as QuickRentMyRide.Models.Car;

    if (car == null)
    {
        <div class="alert alert-danger text-center">Car details not found!</div>
        return;
    }
}

<div class="container py-5">
    <div class="card shadow-lg rounded-4 overflow-hidden"
         style="transition: transform 0.3s;"
         onmouseover="this.style.transform='scale(1.02)'"
         onmouseout="this.style.transform='scale(1)'">

        <div class="row g-0">
            <!-- Car Image -->
            <div class="col-md-5">
                <img src="@car.CarImage" class="img-fluid h-100" style="object-fit: cover;" alt="@car.CarBrand @car.CarModel" />
            </div>

            <!-- Car Details & Booking Form -->
            <div class="col-md-7">
                <div class="card-body p-4">
                    <h2 class="card-title mb-3 fw-bold">@car.CarBrand @car.CarModel</h2>

                    <span class="badge bg-success fs-6 mb-3 shadow-sm">Price per day: LKR @car.RentPerDay</span>

                    <hr />

                    <h5 class="mb-3 fw-semibold">Booking Details</h5>
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="CarID" value="@car.CarID" />

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-semibold">Start Date</label>
                                <input asp-for="StartDate" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label fw-semibold">End Date</label>
                                <input asp-for="EndDate" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm"
                                style="transition: transform 0.3s;"
                                onmouseover="this.style.transform='scale(1.03)';"
                                onmouseout="this.style.transform='scale(1)';">
                            <i class="bi bi-check-circle me-1"></i> Book Now
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
