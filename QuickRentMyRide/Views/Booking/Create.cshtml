@model QuickRentMyRide.Models.Booking

@{
    var car = ViewBag.Car as QuickRentMyRide.Models.Car;

    if (car == null)
    {
        <div class="alert alert-danger">Car details not found!</div>
        return;
    }
}

<div class="container py-5">
    <div class="card shadow-lg rounded">
        <div class="row g-0">
            <!-- Car Image -->
            <div class="col-md-5">
                <img src="@car.CarImage" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="@car.CarBrand @car.CarModel" />

            </div>

            <!-- Car Details & Booking Form -->
            <div class="col-md-7">
                <div class="card-body">
                    <h2 class="card-title mb-3">@car.CarBrand @car.CarModel</h2>
                    <p class="text-primary fs-5"><strong>Price per day:</strong> LKR @car.PricePerDay</p>

                    <hr />

                    <h5 class="mb-3">Booking Details</h5>
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="CarID" value="@car.CarID" />

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label">Start Date</label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label">End Date</label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">Book Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
