@model Customer
@{
    ViewBag.Title = "Delete Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Confirm Delete</h4>
                </div>
                <div class="card-body text-center">
                    <h5>Are you sure you want to delete this customer?</h5>
                    <p class="mt-3"><strong>@Model.FirstName @Model.LastName</strong></p>
                    <p>Email: @Model.Email</p>
                    <p>Phone: @Model.PhoneNumber</p>

                    @if (!string.IsNullOrEmpty(Model.LicensePhotoPath))
                    {
                        <img src="@Model.LicensePhotoPath" width="100" class="rounded shadow" alt="License Photo" />
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="CustomerID" />
                        <button type="submit" class="btn btn-danger">🗑️ Delete</button>
                        <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary mx-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
