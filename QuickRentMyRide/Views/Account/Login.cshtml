@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card col-12 col-md-6 col-lg-4">

        <!-- Logo & Title -->
        <div class="text-center mb-4">
            <img src="~/images/Logo.jpg" alt="Car Rental Logo" style="width: 80px;" class="rounded-circle">
            <h4 class="mt-3 fw-bold">Welcome Back</h4>
            <p class="text-muted">Login to continue booking your ride</p>
        </div>

        <!-- Success Message (from Register redirect) -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }

        <!-- Error Message -->
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <!-- Login Form -->
        <form asp-action="Login" asp-controller="Account" method="post" novalidate class="needs-validation">
            <div class="form-floating mb-3">
                <input type="email" name="Gmail_Address" class="form-control" id="Gmail_Address" placeholder="Email Address" required />
                <label for="Gmail_Address">Email Address</label>
                <div class="invalid-feedback">Please enter your email.</div>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="password" placeholder="Password" required minlength="8" />
                <label for="password">Password</label>
                <div class="invalid-feedback">Password must be at least 8 characters long.</div>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Login</button>
        </form>

        <!-- Divider -->
        <div class="text-center text-muted my-3">or continue with</div>

        <!-- Social Media Login Buttons -->
        <div class="d-grid gap-2 mt-3">
            <a href="https://account.google.com/"
               class="btn btn-outline-secondary rounded-pill py-2 fw-semibold d-flex align-items-center justify-content-center">
                <i class="bi bi-google me-2"></i> Continue with Google
            </a>

            <a href="https://www.facebook.com/"
               class="btn btn-outline-primary rounded-pill py-2 fw-semibold d-flex align-items-center justify-content-center">
                <i class="bi bi-facebook me-2"></i> Continue with Facebook
            </a>

            <a href="https://twitter.com/login"
               class="btn btn-outline-info rounded-pill py-2 fw-semibold d-flex align-items-center justify-content-center">
                <i class="bi bi-twitter me-2"></i> Continue with Twitter
            </a>
        </div>

        <!-- Signup Link -->
        <div class="text-center mt-4">
            <p class="mb-0">Don't have an account? <a href="/Account/Register" class="fw-bold">Sign up</a></p>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
