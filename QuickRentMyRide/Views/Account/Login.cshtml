@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card col-12 col-md-6 col-lg-4">

        <!-- Logo & Title -->
        <div class="text-center mb-4">
            <img src="~/images/Logo.jpg" alt="Car Rental Logo" style="width: 80px;" class="rounded-circle">
            <h4 class="mt-3 fw-bold">Welcome Back</h4>
            <p class="text-muted">Login to continue booking your ride</p>
        </div>

        <!-- Error Message -->
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <!-- Login Form -->
        <form method="post" action="/Account/Login" novalidate class="needs-validation">
            <div class="form-floating mb-3">
                <input type="text" name="username" class="form-control" id="username" placeholder="Username" required />
                <label for="username">Username</label>
                <div class="invalid-feedback">Please enter your username.</div>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="password" placeholder="Password" required minlength="5" />
                <label for="password">Password</label>
                <div class="invalid-feedback">Password must be at least 5 characters long.</div>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Login</button>
        </form>

        <!-- Divider -->
        <div class="text-center text-muted my-3">or continue with</div>

        <!-- Social Media Login Buttons -->
        <div class="d-grid gap-2 mt-3">

            <!-- Google -->
