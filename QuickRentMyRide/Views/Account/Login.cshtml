@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card col-12 col-md-6 col-lg-4">

        <!-- Logo & Title -->
        <div class="text-center mb-4">
            <img src="~/images/Logo.jpg" alt="Car Rental Logo" style="width: 80px;" class="rounded-circle">
            <h4 class="mt-3 fw-bold">Welcome Back</h4>
            <p class="text-muted">Login to continue booking your ride</p>
        </div>

        <!-- Error Message -->
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <!-- Login Form -->
        <form method="post" action="/Account/Login" novalidate class="needs-validation">
            <div class="form-floating mb-3">
                <input type="text" name="username" class="form-control" id="username" placeholder="Username" required />
                <label for="username">Username</label>
                <div class="invalid-feedback">Please enter your username.</div>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="password" placeholder="Password" required minlength="5" />
                <label for="password">Password</label>
                <div class="invalid-feedback">Password must be at least 5 characters long.</div>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Login</button>
        </form>

        <!-- Divider -->
        <div class="text-center text-muted my-3">or continue with</div>

        <!-- Social Login -->
        <div class="d-flex justify-content-between">
            <a href="https://myaccount.google.com/" class="btn btn-outline-danger w-50 me-2 social-btn">
                <i class="bi bi-google"></i> Google
            </a>
            <a href="https://www.facebook.com/" class="btn btn-outline-primary w-50 ms-2 social-btn">
                <i class="bi bi-facebook"></i> Facebook
            </a>
        </div>

        <!-- Signup Link -->
        <div class="text-center mt-4">
            <p class="mb-0">Don't have an account? <a href="/Account/Register" class="fw-bold">Sign up</a></p>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

