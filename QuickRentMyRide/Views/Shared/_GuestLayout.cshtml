<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickRentMyRide</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuickRentMyRide.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <header>

       


        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #407af7 ;">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div>
                    <img src="~/images/Logo.jpg" alt="Logo" width="50" height="40" class="me-2" />
                    </div>
                    <strong>QuickRentMyRide</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope"></i> Contact
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle"></i> About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </li>
                    </ul>
                </div>


            </div>
        </nav>


        
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <!-- Available Cars -->
    <div class="container">
        <h3 class="mb-4">Available Cars / Products</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="~/images/89de2be91be544eeb77e28bd5113d897.webp" class="card-img-top" alt="Casual Outdoor" style="height:200px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Casual Outdoor</h5>
                        <p class="text-primary fw-bold">LKR 1,250.00</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary w-100 mt-auto">BOOK NOW</a>

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="~/images/OIP (1).webp" class="card-img-top" alt="Basketball" style="height:200px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Basketball</h5>
                        <p class="text-primary fw-bold">LKR 1,750.00</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary w-100 mt-auto">BOOK NOW</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="~/images/OIP (2).webp" class="card-img-top" alt="Cricket Ball" style="height:200px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Cricket Ball</h5>
                        <p class="text-primary fw-bold">LKR 250.00</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary w-100 mt-auto">BOOK NOW</a>
                    </div>
                </div>
            </div>
            <!-- Add more cars following the same structure -->
        </div>
    </div>





    @* Footer *@
    <div class="container-fluid text-white py-5 px-sm-3 px-md-5 position-relative"
         style="margin-top: 90px; background: url('/images/Logo.jpg') no-repeat center center; background-size: cover; background-blend-mode: darken; background-color: rgba(33,37,41,0.95);">

        <div class="row g-5 pt-4">
            <div class="col-lg-4 col-md-6">
                <h4 class="text-uppercase text-white mb-4">Get In Touch</h4>
                <p><i class="fa fa-map-marker-alt me-3 text-white-50"></i>Pannai Road, Jaffna, Sri Lanka</p>
                <p><i class="fa fa-phone-alt me-3 text-white-50"></i>+94-7044-56403</p>
                <p><i class="fa fa-envelope me-3 text-white-50"></i>quickrentmyride@gmail.com</p>
                <h6 class="text-uppercase text-white mt-4 mb-3">Follow Us</h6>
                <div class="d-flex">
                    <a class="btn btn-outline-light btn-social me-2" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-outline-light btn-social me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-outline-light btn-social me-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-outline-light btn-social" href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <h4 class="text-uppercase text-white mb-4">Useful Links</h4>
                <div class="d-flex flex-column">
                    <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Privacy Policy</a>
                    <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Terms & Conditions</a>
                    <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Register</a>
                    <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Help & FAQs</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-12">
                <h4 class="text-uppercase text-white mb-4">About Us</h4>
                <p class="text-white-50">QuickRentMyRide is a trusted vehicle rental service based in Jaffna. We offer affordable and efficient mobility solutions across Sri Lanka.</p>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-black text-center py-3">
        <p class="mb-1 text-white-50">&copy; <span class="text-white">QuickRentMyRide</span>. All Rights Reserved.</p>
        <p class="m-0 text-white-50">Designed by <strong>Group of QuickRentMyRide</strong></p>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
