<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -QUICK RENT MY RIDE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuickRentMyRide.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                    <img src="~/images/Logo.jpg" alt="Logo" width="50" height="40" class="me-1" />   @* Add Logo *@
                    <span>QuickRentMyRide</span>
                </a>

                <div class="text-center my-4">
					<a class="btn btn-primary mx-2" href="/Admin/Dashboard">🏠 Home</a>
                    <a class="btn btn-primary mx-2" href="/Admin/AddCustomer">➕ Add Customer</a>
                    <a class="btn btn-success mx-2" href="/Admin/AddCar">🚗 Add Car</a>
                </div>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
 
        <!-- Footer Start -->
        <div class="container-fluid text-white py-5 px-sm-3 px-md-5 position-relative"
             style="margin-top: 90px; background: url('/images/Logo.jpg') no-repeat center center; background-size: cover; background-blend-mode: darken; background-color: rgba(33,37,41,0.95);">

            <div class="row g-5 pt-4">
                <!-- Contact Info -->
                <div class="col-lg-4 col-md-6">
                    <h4 class="text-uppercase text-white mb-4">Get In Touch</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3 text-white-50"></i>Pannai road, Jaffna, Sri Lanka</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3 text-white-50"></i>+94-7044-56403</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3 text-white-50"></i>quickrentmyride@gmail.com</p>
                    <h6 class="text-uppercase text-white mt-4 mb-3">Follow Us</h6>
                    <div class="d-flex">
                        <a class="btn btn-outline-light btn-social me-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social me-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a class="btn btn-outline-light btn-social" href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>

                <!-- Useful Links -->
                <div class="col-lg-4 col-md-6">
                    <h4 class="text-uppercase text-white mb-4">Useful Links</h4>
                    <div class="d-flex flex-column">
                        <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Privacy Policy</a>
                        <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Terms & Conditions</a>
                        <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>New Member Registration</a>
                        <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Affiliate Programme</a>
                        <a class="text-white-50 mb-2 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Return & Refund</a>
                        <a class="text-white-50 text-decoration-none" href="#"><i class="fa fa-angle-right me-2 text-light"></i>Help & FAQs</a>
                    </div>
                </div>

                <!-- About Us -->
                <div class="col-lg-4 col-md-12">
                    <h4 class="text-uppercase text-white mb-4">About Us</h4>
                    <p class="text-white-50">QuickRentMyRide is a trusted vehicle rental service based in Jaffna. We offer affordable and efficient mobility solutions across Sri Lanka.</p>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="container-fluid bg-black text-center py-3">
            <p class="mb-1 text-white-50">&copy; <span class="text-white">QUICK RENT MY RIDE</span>. All Rights Reserved.</p>
            <p class="m-0 text-white-50">Designed by <strong>Saja</strong></p>
        </div>
        <!-- Footer End -->



        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
