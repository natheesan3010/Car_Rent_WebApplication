@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<!-- Hero Section -->
<section class="bg-light text-center py-5 mb-5">
    <h1 class="fw-bold text-uppercase">Welcome to <span class="text-primary">QuickRentMyRide</span></h1>
    <p class="lead text-muted">Your trusted car rental partner in Sri Lanka</p>
</section>

<!-- About Section -->
<div class="container py-5">
    <div class="row align-items-center">
        <!-- Left side - Image -->
        <div class="col-lg-6 mb-4 mb-lg-0">
            <img src="~/images/about.png" alt="About Us" class="img-fluid rounded shadow" />
        </div>

        <!-- Right side - Content -->
        <div class="col-lg-6">
            <h2 class="fw-bold text-primary mb-3">About QuickRentMyRide</h2>
            <p class="text-muted">
                QuickRentMyRide is a reliable and convenient car rental service.
                Our mission is to provide customers with a fast, safe, and affordable travel experience.
            </p>
            <ul class="list-unstyled">
                <li><i class="bi bi-car-front text-success me-2"></i> Reliable Cars</li>
                <li><i class="bi bi-headset text-success me-2"></i> 24/7 Customer Support</li>
                <li><i class="bi bi-calendar-check text-success me-2"></i> Easy Booking Process</li>
            </ul>
            <a href="~/Home/Contact" class="btn btn-primary rounded-pill px-4 mt-3">Contact Us</a>
        </div>
    </div>
</div>

<!-- Team Section -->
<div class="container py-5 team">
    <h3 class="text-center fw-bold mb-4">Our Team</h3>
    <div class="row text-center">
        <div class="col-md-4">
            <img src="~/images/team1.jpg" class="rounded-circle mb-3 shadow" width="120" height="120" />
            <h5>NATHEESAN</h5>
            <p class="text-muted">Founder & CEO</p>
        </div>
        <div class="col-md-4">
            <img src="~/images/team2.jpg" class="rounded-circle mb-3 shadow" width="120" height="120" />
            <h5>SAJAGATHASAN</h5>
            <p class="text-muted">Operations Manager</p>
        </div>
        <div class="col-md-4">
            <img src="~/images/team3.jpg" class="rounded-circle mb-3 shadow" width="120" height="120" />
            <h5>DANUJAN</h5>
            <p class="text-muted">Customer Support Lead</p>
        </div>
    </div>
</div>

<!-- Testimonials Section -->
<div class="container py-5">
    <h3 class="text-center fw-bold mb-4">What Our Customers Say</h3>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-0">
                <p class="text-muted">“QuickRentMyRide gave me the best car rental experience in Jaffna. Affordable and reliable!”</p>
                <h6 class="fw-bold">- Kannan</h6>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-0">
                <p class="text-muted">“Easy booking process and friendly support team. Highly recommend.”</p>
                <h6 class="fw-bold">- Priya</h6>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-0">
                <p class="text-muted">“Safe cars and excellent customer service. I’ll definitely rent again!”</p>
                <h6 class="fw-bold">- Sunil</h6>
            </div>
        </div>
    </div>
</div>

<!-- Gallery / Carousel Section -->
<div class="container py-5">
    <h3 class="text-center fw-bold mb-4">Our Cars</h3>
    <div id="carCarousel" class="carousel slide shadow rounded" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/C2.webp" class="d-block w-100 rounded" alt="Car 1">
            </div>
            <div class="carousel-item">
                <img src="~/images/OIP (2).webp" class="d-block w-100 rounded" alt="Car 2">
            </div>
            <div class="carousel-item">
                <img src="~/images/OIP (1).webp" class="d-block w-100 rounded" alt="Car 3">
            </div>
        </div>
        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        <!-- Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#carCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#carCarousel" data-bs-slide-to="2"></button>
        </div>
    </div>
</div>


<!-- Google Map Section -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h3 class="fw-bold mb-4">Find Us on Map</h3>
        <div class="ratio ratio-16x9">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3955.754122334432!2d80.0111!3d9.6615"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
    </div>
</section>

<!-- Contact Info Section -->
<section class="py-5 bg-dark text-white">
    <div class="container text-center">
        <h3 class="fw-bold mb-4 text-uppercase">Contact Information</h3>
        <p><i class="fa fa-map-marker-alt me-3 text-white-50"></i>Pannai Road, Jaffna, Sri Lanka</p>
        <p><i class="fa fa-phone-alt me-3 text-white-50"></i>+94-7044-56403</p>
        <p><i class="fa fa-envelope me-3 text-white-50"></i>quickrentmyride@gmail.com</p>
    </div>
</section>
