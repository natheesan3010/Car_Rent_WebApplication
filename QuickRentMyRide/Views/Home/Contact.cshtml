<!-- Contact Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="cynex-card p-5">
                    <div class="text-center mb-5">
                        <h2 class="cynex-font text-cynex-silver mb-3">
                            <i class="fas fa-paper-plane text-cynex-blue"></i> SEND MESSAGE
                        </h2>
                        <p class="text-muted">Tell us how we can assist you with your luxury automotive needs</p>
                    </div>

                    <form method="post" asp-action="Contact">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="firstName" class="form-label">
                                    <i class="fas fa-user text-cynex-blue"></i> First Name *
                                </label>
                                <input type="text" class="form-control" id="firstName" name="firstName" required placeholder="Your first name">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="lastName" class="form-label">
                                    <i class="fas fa-user text-cynex-blue"></i> Last Name *
                                </label>
                                <input type="text" class="form-control" id="lastName" name="lastName" required placeholder="Your last name">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope text-cynex-blue"></i> Email Address *
                                </label>
                                <input type="email" class="form-control" id="email" name="email" required placeholder="your.email@example.com">
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="phone" class="form-label">
                                    <i class="fas fa-phone text-cynex-blue"></i> Phone Number
                                </label>
                                <input type="tel" class="form-control" id="phone" name="phone" placeholder="+1 (555) 123-4567">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="subject" class="form-label">
                                <i class="fas fa-tag text-cynex-blue"></i> Subject *
                            </label>
                            <select class="form-control" id="subject" name="subject" required>
                                <option value="">Select inquiry type</option>
                                <option value="fleet-inquiry">Fleet Inquiry</option>
                                <option value="booking-assistance">Booking Assistance</option>
                                <option value="membership">Elite Membership</option>
                                <option value="corporate">Corporate Services</option>
                                <option value="partnership">Partnership Opportunities</option>
                                <option value="feedback">Feedback & Suggestions</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="message" class="form-label">
                                <i class="fas fa-comment text-cynex-blue"></i> Message *
                            </label>
                            <textarea class="form-control" id="message" name="message" rows="6" required placeholder="Tell us how we can assist you with your luxury automotive needs..."></textarea>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="newsletter" name="newsletter">
                                <label class="form-check-label text-cynex-silver" for="newsletter">
                                    Subscribe to exclusive offers and luxury automotive updates
                                </label>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-cynex-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> SEND MESSAGE
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

